<h1><%= t('users.edit_user') %></h1>
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %>
            <%= t('users.error') %></h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset>
      <legend><%= t('users.new.user_details')%>></legend>

      <div class="field">
        <%= f.label t('name') %><br />
        <%= f.text_field :name, :size => 40 %>
      </div>

      <div class="field">
        <%= f.label t('credit') %><br />
        <%= f.text_field :credit, :size => 40 %>
      </div>


      <div class="actions">
        <%= f.submit %>
      </div>
    </fieldset>
<% end %>

<%= link_to t('show'), @user %> |
<%= link_to t('back'), users_path %>
