<h1>Listing users</h1>
<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
   <% if session[:user_id] == user.id %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if session[:admin] %>
          <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
        <% end %>
      </tr>
   <% end %>
<% end %>
</table>

<br />
<% if session[:admin]  %>
<%= link_to 'New User', new_user_path %>
<% end %>
