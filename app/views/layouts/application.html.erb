<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store |</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">

	<div id="banner">
    <%= form_tag store_path, class: 'locale' do %>
        <%= select_tag 'set_locale',
                       options_for_select(LANGUAGES, I18n.locale.to_s),
                       onchange: 'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('locale input').hide()" %>
    <% end %>
		<%= image_tag("logo.png") %>
		<%= @page_title || t('layouts.application.title') %>

	</div>
	<div id="columns">
		<div id="side">
      <% if session[:user_id].blank?  %>
        <div>
          <h3><%= link_to 'Sign Up!', new_user_path %></h3>
          <h3 style="color: white">Already registered? - <%= link_to 'Login!', login_path %></h3>
        </div>
        <% else %>
          <div><%= link_to 'Profile', users_path %></div>
          <div><h3 style="color: white">
            Credit value:
            <%= get_credit_value(session[:user_id]) %>
          </h3></div>
      <% end %>

			<% if  @cart %>
			<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
				<%= render @cart %>
			<% end %>
			<% end %>
			<a href="/"><%= t('.home')%> </a><br />
			<a href="http://www..."><%= t('.questions')%> </a><br />
			<a href="http://www..."><%= t('.news')%> </a><br />
			<a href="http://www..."><%= t('.contact')%> </a><br />
			<p style="color:white;"><%= Time.now.month %>/<%= Time.now.day %>/<%= Time.now.year %></p>
			
			<% if session[:admin]  %>
				<br />
				<%= link_to "Orders", orders_path %><br />
				<%= link_to "Products", products_path %><br />
				<%= link_to "Users", users_path %><br />
				<br />
				<% end %>
      <% if session[:user_id] || session[:admin]   %>
      <%= button_to "Logout", logout_path, :method => :delete %>
          <% end %>
		</div>
		<div id="main">

			<%= yield %>
		</div>
	</div>
</body>
</html>
